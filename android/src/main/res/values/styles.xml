<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/red</item>
        <item name="android:fontFamily">@font/default_font_family</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ToolbarThemeColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/red</item>
    </style>

    <style name="ThemeBackgroundWhite" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/default_font_family</item>
    </style>

    <style name="ToolbarBackgroundWhiteBlackArrow" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="DefaultTextViewAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black__80</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultTextViewAppearanceOppacity" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black__40</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultTextViewTitleApparence" parent="@style/DefaultTextViewAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserProfileEditTextApparence" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorSecondary">@color/black__80</item>
        <item name="android:singleLine">true</item>
        <item name="android:capitalize">sentences</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubTitleCollapsingToolbar" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black__80</item>
    </style>

    <style name="DefaultButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_solid_red_radius_25dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultFullWidth" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_solid_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black__30</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ThemeOverlay.SwitchCompat" parent="">
        <item name="colorControlActivated">@color/colorOnSwitch</item>
    </style>

    <style name="textDrawer" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/colorFontDescription</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
